{
  "name": "github-search-api",
  "version": "0.1.1",
  "private": true,
  "dependencies": {
    "@emotion/core": "^11.0.0",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@types/jest": "^26.0.24",
    "@types/node": "16.11.6",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.11",
    "mobx": "^6.3.6",
    "mobx-react": "^7.2.1",
    "mobx-state-tree": "^5.0.4",
    "polished": "^4.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "use-debounce": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "babel-plugin-emotion": "^11.0.0",
    "eslint": "7",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "serve": "^12.0.1",
    "source-map-explorer": "^2.5.2"
  },
  "resolutions": {
    "@babel/core": "^7.16.0",
    "@types/react": "17.0.11",
    "@types/react-dom": "17.0.11",
    "babel-eslint": "npm:@babel/eslint-parser@7.16.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:all": "CI=true yarn run test --bail --colors --ci",
    "format": "prettier --write",
    "lint": "eslint --format codeframe",
    "lint:all": "yarn run --silent lint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn run --silent lint --fix",
    "eject": "react-scripts eject",
    "serve": "serve --no-clipboard --single",
    "explore-source-maps": "source-map-explorer 'build/static/js/*.js'",
    "predeploy": "yarn run test:all && yarn run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 edge version",
    "last 1 safari version"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run test:all && yarn run build"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn run format",
      "yarn run lint:fix",
      "git add"
    ],
    "*.{json,css,md,html}": [
      "yarn run format",
      "git add"
    ]
  },
  "homepage": "https://elektronik2k5.github.io/github-user-search"
}
